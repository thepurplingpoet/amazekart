%p
  %strong Name:
  = @product.name
%p
  %strong Description:
  = @product.description
%p
  %strong Price:
  = @product.price
%p
  %strong Sale Price:
  = @product.price - @product.discount

- if current_user 
  - if current_user.id == @product.user_id
    = link_to "Edit Product", edit_product_path(@product)
  -else
    = link_to "Add to Cart", cart_add_path(cart: {product_id: @product.id, user_id: current_user.id})
    - if @added_to_wishlist.nil?
      = link_to "Add to Wishlist", wishlist_index_path(:wishlist => {:product_id => @product.id, :user_id => current_user.id}), method: :post
    -else
    Added to Wishlist 
- else
  = link_to "Login to purchase this item", new_user_session_path

%h2 Reviews
-if current_user.id!=@product.user_id
  =link_to "Add a Review", new_review_path(review_params:{product_id:@product.id})
%br
%br
%br
- Review.where(product_id:@product.id).each do |review|
  Rating: 
  =review.rating

  Review:
  =review.review
  - if review.user_id==current_user.id
    = link_to 'Edit', edit_review_path(review)
    = link_to 'Delete', review_path(review) , method: :delete
    %br
