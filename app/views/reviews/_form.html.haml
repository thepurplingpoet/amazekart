= form_for([@review.product, @review]) do |f|
  - if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |message|
          %li= message

  .field
    = f.hidden_field :user_id , value: current_user.id
  .field
    = f.hidden_field :product_id, value:@review.product_id
  .field
    = f.label :rating
    = f.select :rating , options_for_select([1,2,3,4,5])
  .field
    = f.label :review
    = f.text_area :review
  .actions
    = f.submit 'Save'